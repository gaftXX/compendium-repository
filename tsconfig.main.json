{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "main/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "renderer",
    "orchestrator",
    "ui"
  ]
}
